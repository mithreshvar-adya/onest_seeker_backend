# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build backend_application`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t backend_application`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system backend_application && \
          adduser --system -G backend_application backend_application

COPY dist/apps/backend_application backend_application/
RUN chown -R backend_application:backend_application .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix backend_application --omit=dev -f install

CMD [ "node", "backend_application" ]
